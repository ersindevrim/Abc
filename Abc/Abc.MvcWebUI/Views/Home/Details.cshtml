@using Abc.MvcWebUI.Entity;
@model Product
@{
    ViewBag.Title = "Details";
}
<div id="product-details" class="container pb-5">
    <div class="row">
        <div class="col-md-6">
            <img src="/Upload/@Model.Image" class="img-fluid rounded w-100 ">
        </div>
        <div class="col-md-6 pl-5">
            <div class="row">
                <h1>@Model.Name</h1>
            </div>
            <div class="row">

                @if (Model.IsApproved)
                {
                <span class="badge badge-primary">Stokta</span>
                }
                else
                {
                <span class="badge badge-danger">Stokta Yok</span>
                }
                <span class="product-number"> #312321124</span>
            </div>
            <div class="row">
                <div id="description">
                    @Model.Description
                </div>
            </div>
            <div class="row">
                <div class="col-md-4">
                    <i class="fa fa-star" aria-hidden="true"></i>
                    <i class="fa fa-star" aria-hidden="true"></i>
                    <i class="fa fa-star" aria-hidden="true"></i>
                    <i class="fa fa-star" aria-hidden="true"></i>
                    <i class="fa fa-star" aria-hidden="true"></i>
                    <span class="badge badge-success">77</span>
                </div>
                <div class="col-md-4">
                    Write a review
                </div>

            </div>
            <div class="row">
                <h4 id="product-price">@Model.Price TL</h4>
            </div>
            <div class="row">

                @using (Html.BeginForm("AddToCart","Cart")) {
                    @Html.HiddenFor(i=>i.Id)
                    <button type="submit" class="btn btn-success">
                        <i class="fa fa-cart-plus" aria-hidden="true"></i>
                        Add To Cart
                    </button>
                }
            </div>
        </div>
    </div>
    <div class="row mt-3">
